---
import { getCollection } from "astro:content";
import CardCarousel from "@components/CardCarousel.astro";

// Content Fetching: List four most recent work experiences
const experiences = (await getCollection("experience")).sort(
    (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<section class="section" id="experiences">
    <header class="section-title">Experiences</header>
    <p class="section-subtitle">
        Here are case studies of my recent freelance work projects.
    </p>

    <CardCarousel
        carouselId="experiencesSlider"
        desktopItemPerSlide={3}
        items={experiences}
        mobileCardHeight={420}
        cardType="experience"
    />
</section>
