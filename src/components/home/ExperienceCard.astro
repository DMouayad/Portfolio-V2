---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
    item: CollectionEntry<"experience">;
}
const { item } = Astro.props;
const id = item.id;
const { title, description, img, img_alt } = item.data;
const pageURL = "/experience/" + id;
---

<div class="experience-card">
    <a href={pageURL} target="_blank">
        <Image src={img} alt={img_alt ?? title} />
    </a>
    <a class="title" href={pageURL} target="_blank">
        {title}
    </a>
    <p class="description">{description}</p>
    <a class="button" href={pageURL} target="_blank">View details</a>
</div>

<style>
    .experience-card {
        position: relative;
        max-width: 350px;
        max-width: min(80vw, 350px);
        max-height: 400px;
        border: none;
        display: flex;
        flex-direction: column;
    }

    .experience-card img {
        width: 350px;
        height: 230px;
        border-radius: 5px;
    }
    .title {
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: var(--text-lg);
        text-decoration: none;
        color: var(--card-text-color);
        font-weight: 600;
        margin-top: 20px;
    }

    .description {
        font-size: var(--text-base);
        color: var(--card-text-color);
        overflow: hidden;
        margin: 0.3em 0;
        height: 70px;
        font-weight: 400;
        word-wrap: break-word;
    }

    .footer {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }

    .tags {
        display: flex;
        gap: 0.75rem;
        align-items: center;
    }

    .tag {
        display: flex;
        align-items: center;
        gap: 0.35rem;
        font-size: var(--text-xs);
        color: var(--gray-100);
    }

    .tag-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
    }
    .button {
        text-decoration: none;
        color: var(--accent-regular);
        transition: all 0.2s ease-in-out;
        color: var(--secondary-text-color);
    }
    .experience-card:hover .button {
        font-weight: 500;
        color: var(--gray-0);
    }
    .button::after {
        background-color: currentColor;
        position: absolute;
        left: 0;
        bottom: 0;
        content: "";
        display: block;
        height: 0.1em;
        transition: width 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        width: 0;
    }
    .experience-card:hover .button::after {
        width: 90px;
    }
</style>
